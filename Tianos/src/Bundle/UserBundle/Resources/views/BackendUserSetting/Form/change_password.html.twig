<div class="row">
    <div class="col-md-3 col-sm-offset-4">

        {% if formPassword.vars.errors|length > 0 %}
            <div class="alert alert-warning alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                <h4><i class="icon fa fa-warning"></i> Info</h4>
                {{ form_errors(formPassword) }}
            </div>
        {% endif %}

        {{ form_start(formPassword, {'method': 'POST', 'attr': {'role': 'form'}}) }}
            <div class="box-body">
                <div class="form-group">
                    {{ form_label(formPassword.oldPassword) }}
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-key"></i></span>
                        {{ form_widget(formPassword.oldPassword) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(formPassword.newPassword.first) }}
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                        {{ form_widget(formPassword.newPassword.first) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(formPassword.newPassword.second) }}
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                        {{ form_widget(formPassword.newPassword.second) }}
                    </div>
                </div>

            </div>

            <div class="box-footer">
                {{ form_widget(formPassword.submit) }}
            </div>
        {{ form_end(formPassword)}}

    </div>
</div>
