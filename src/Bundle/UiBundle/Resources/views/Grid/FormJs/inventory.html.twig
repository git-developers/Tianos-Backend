{% if dataTable.route.edit is defined %}
    $('body.{{ vars.body_css }}').formEdit({
        modalId: '{{ modal.edit_id }}',
        route: '{{ path(dataTable.route.edit) }}',
        formName: '{{ form_mapper.edit_name }}',
        tableJson: tableJson
    });
{% endif %}

