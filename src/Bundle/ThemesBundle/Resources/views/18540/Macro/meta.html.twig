{% macro keywords(content) %}

    {% if content is empty %}
        {% set content = 'Tianos, Beauty, Software' %}
    {% endif %}

    <meta name="keywords" content="{{ content }}"/>
{% endmacro %}

{% macro description(content) %}

    {% if content is empty %}
        {% set content = 'Tianos Beauty • Software para la gestión de recursos on-line' %}
    {% endif %}

    <meta name="description" content="{{ content }}"/>
{% endmacro %}


