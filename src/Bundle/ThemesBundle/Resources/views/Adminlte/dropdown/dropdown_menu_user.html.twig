<li class="dropdown user user-menu">

    <a href="#" class="dropdown-toggle" data-toggle="dropdown" alt="{{ app.user.name }} {{ app.user.lastName }}" title="{{ app.user.name }} {{ app.user.lastName }}">
        {#<img src="{{ asset('bundles/backend/dist/img/user2-160x160.jpg')}}" class="user-image">#}
        <img src="{{ image_avatar }}" class="user-image">
        <span class="hidden-xs">
            {{ app_user_name(app.user, 0, 10) }}
        </span>
    </a>

    <ul class="dropdown-menu">
        <li class="user-header">
            <img src="{{ image_avatar }}" class="img-circle x-hand" onclick="location.href='{{ path('frontend_profile_index', {slug:app.user.slug}) }}';">
            <p>
                {{ app_user_name(app.user, 0, 10) }}
                {#<small>Miembro desde {{ app.user.createdAt|localizeddate('full', 'none', locale, null, 'Y') }}</small>#}
