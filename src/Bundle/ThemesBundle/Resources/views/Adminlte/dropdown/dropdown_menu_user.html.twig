        {#Menu Footer#}
        <li class="user-footer">
            <div class="pull-left">
                <a href="{{ path('frontend_profile_index', {slug:app.user.slug}) }}" class="btn btn-default btn-flat">Perfil</a>
            </div>
            <div class="pull-right">
                <a href="{{ path('frontend_security_logout') }}" class="btn btn-default btn-flat">Logout</a>
