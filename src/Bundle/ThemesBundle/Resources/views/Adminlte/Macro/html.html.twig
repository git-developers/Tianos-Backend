{% macro facebook_sdk() %}
    <div id="fb-root"></div>
    <script>
        (function(d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.net/es_LA/sdk.js#xfbml=1&version=v2.8&appId={{ application_fb_app_id }}";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));
    </script>
{% endmacro %}

{% macro flash_message_success() %}
    {% for flash_message in app.session.flashBag.get('success') %}
        <div class="flashbag flashbag-success">
            <a class="pull-right btn-close" href="#" rel="tooltip" data-toggle="tooltip" data-placement="left" title="cerrar">×</a>
            <i class="fa fa-fw fa-check"></i> {{ flash_message }}
        </div>
    {% endfor %}
{% endmacro %}

