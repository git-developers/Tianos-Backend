<div class="box box-primary">
    <div class="box-body box-profile">
        <img class="profile-user-img img-responsive img-circle x-hand" src="{{ profile_avatar }}" data-toggle="modal" data-target="#modal-avatar">
        {#<h3 class="profile-username text-center">{{ user.name }} {{ user.lastName }}</h3>#}
        <p class="text-muted text-center">{{ entity.headline }}</p>
        <ul class="list-group list-group-unbordered">
            <li class="list-group-item">
                <b>Seguidores</b>
                <a class="followers pull-right">1,322</a>
            </li>
            <li class="list-group-item">
                <b>Siguiendo</b>
                <a class="following pull-right">543</a>
            </li>
            <li class="list-group-item">
                <b>Amigos</b>
                <a class="friends pull-right">13,287</a>
            </li>
        </ul>
        <button
            class="btn btn-success btn-block {{ vars.button_add_friend }}"
            data-toggle="tooltip"
            data-original-title="Agregar a {{ entity.name|slice(0, 25) }} como amigo"
        >
            <b><i class="fa fa-fw fa-user-plus"></i> Agregar amigo</b>
        </button>
        <button
            class="btn btn-default btn-block {{ vars.button_remove_friend }}"
            data-toggle="tooltip"
            data-original-title="Remover amigo"
            style="display: none"
        >
            <b><i class="fa fa-fw fa-check-square-o"></i> Amigos</b>
        </button>
        {#<button href="#" class="btn btn-primary btn-block">#}
            {#<b>Seguir</b>#}
        {#</button>#}
    </div>
</div>

<div class="box box-primary">

    <div class="box-header with-border">
        <h3 class="box-title">Sobre mi</h3>
    </div>

    <div class="box-body">
        {{ tianos_profile_about_me(entity.aboutMe) }}
    </div>

</div>