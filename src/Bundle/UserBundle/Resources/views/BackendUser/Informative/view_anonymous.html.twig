{% extends 'GridBundle::Template/crud_modal_content.html.twig' %}

{% block crud_modal_content %}
    <div class="box box-solid">

        {#<div class="box-header with-border">#}
            {#<h3 class="box-title">About Me</h3>#}
        {#</div>#}

        <div class="box-body">

            <div class="row">
                <div class="col-md-6">
                    <strong>
                        <i class="fa fa-fw fa-gg"></i> Id
                    </strong>
                    <p class="text-muted">
                        <span class="badge bg-blue">{{ entity.id }}</span>
                    </p>
                </div>
                <div class="col-md-6">
                    <strong>
                        <i class="fa fa-fw fa-feed"></i> Username
                    </strong>
                    <p class="text-muted">
                        {{ entity.username }}
                    </p>
                </div>
            </div>

            <hr>

            <div class="row">
                <div class="col-md-6">
                    <strong>
                        <i class="fa fa-fw fa-user"></i> Nombre
                    </strong>
                    <p class="text-muted">
                        {{ entity.name ~' '~ entity.lastName }}
                    </p>
                </div>
                <div class="col-md-6">
                    {#<strong>#}
                        {#<i class="fa fa-fw fa-envelope-o"></i> Email#}
                    {#</strong>#}
                    {#<p class="text-muted">#}
                        {#{{ entity.email }}#}
                    {#</p>#}
                </div>
            </div>

        </div>
    </div>

    <div class="row">
        <div class="col-md-12 text-center">
            <a href="{{ path('backend_user_profile', {slug: entity.slug}) }}" class="btn btn-info">
                <i class="fa fa-fw fa-eye"></i> ver usuario
            </a>
        </div>
    </div>

{% endblock %}