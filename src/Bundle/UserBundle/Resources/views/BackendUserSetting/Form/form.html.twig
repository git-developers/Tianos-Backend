<div class="row">

    {% if formEdit.vars.errors|length > 0 %}
        <div class="alert alert-warning alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
            <h4><i class="icon fa fa-warning"></i> Info</h4>
            {{ form_errors(formEdit) }}
        </div>
    {% endif %}

    {{ form_start(formEdit, {'method': 'POST', 'attr': {'role': 'form'}}) }}

    <div class="col-md-6">
        <div class="form-group">
            {{ form_label(formEdit.name) }}
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-align-right"></i></span>
                {{ form_widget(formEdit.name) }}
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group">
            {{ form_label(formEdit.lastName) }}
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-align-right"></i></span>
                {{ form_widget(formEdit.lastName) }}
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group">
            {{ form_label(formEdit.email) }}
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-envelope-o"></i></span>
                {{ form_widget(formEdit.email) }}
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group">
            {{ form_label(formEdit.dob) }}
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                {{ form_widget(formEdit.dob) }}
            </div>
        </div>
    </div>

    <div class="col-md-12">
        <div class="form-group">
            {{ form_widget(formEdit.submit) }}
        </div>
    </div>

    {{ form_end(formEdit)}}


</div>


