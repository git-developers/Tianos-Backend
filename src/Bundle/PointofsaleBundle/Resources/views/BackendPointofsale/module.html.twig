        </ol>
    </section>

    <section class="content">

        <div class="row">

            <div class="col-md-3">
                <div class="box box-{{ vars.box_class }} box-solid">
                    <div class="box-header with-border">
                        <h3 class="box-title">Informaci&oacute;n de PDV</h3>

                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                <i class="fa fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="box-body">

                        <ul class="nav nav-pills nav-stacked">
                            <li class="">
                                <a href="#">
                                    <strong>ID:</strong>
                                    <span class="badge bg-blue">{{ entity.id }}</span>
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <strong>Nombre:</strong> {{ entity.name }}
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <strong>Creado:</strong> {{ entity.createdAt|date("Y-m-d H:i") }}
                                </a>
                            </li>
                        </ul>

                    </div>
                </div>
            </div>


            <div class="col-md-9">


                <div class="box box-{{ vars.box_class }}">

                    <div class="box-body">
                        <div class="row">

                            {{ form_start(form) }}

                            <div class="col-md-12 text-right" style="margin-bottom: 10px">
                                {{ form_widget(form.submit) }}
                            </div>

                            {% block choice_widget %}

                                {% for child in form.module.children %}
                                    <div class="col-md-6">
                                        <div class="info-box bg-green">
                                            <span class="info-box-icon">
                                                <i class="fa fa-cubes"></i>
                                            </span>

                                            <div class="info-box-content">
                                                <span class="info-box-text">
                                                    {% if child.vars.value in moduleIds %}
                                                        {{ form_widget(child, { 'attr': {'checked': 'checked'}}) }}
                                                    {% else %}
                                                        {{ form_widget(child, { 'attr': {'class': ''}}) }}
                                                    {% endif %}
                                                </span>
                                                <span class="info-box-number">
                                                    {{ form_label(child, null, { 'label_attr': {'class':'control-label'} }) }}
                                                </span>
                                                <div class="progress">
                                                    <div class="progress-bar" style="width: 70%"></div>
                                                </div>
                                                <span class="progress-description"></span>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}

                            {% endblock choice_widget %}

                            {{ form_widget(form) }}
                            {{ form_end(form) }}

                        </div>
                    </div>

                </div>



            </div>
        </div>
    </section>

