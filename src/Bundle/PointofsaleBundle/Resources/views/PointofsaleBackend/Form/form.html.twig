{% extends 'GridBundle::Template/crud_modal_content.html.twig' %}

{% block crud_modal_content %}

    {#{{ form_start(form) }}#}

    {% if id is defined %}
        <input type="hidden" value="{{ id }}" name="id">
    {% endif %}

    {{ form_widget(form._token) }}

        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <i class="fa fa-fw fa-home"></i>
                    {{ form_label(form.pointOfSale) }}
                    {{ form_widget(form.pointOfSale) }}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <i class="fa fa-fw fa-qrcode"></i>
                    {{ form_label(form.code) }}
                    {{ form_widget(form.code) }}
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <i class="fa fa-fw fa-align-left"></i>
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name) }}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <i class="fa fa-fw fa-map-marker"></i>
                    {{ form_label(form.latitude) }}
                    {{ form_widget(form.latitude) }}
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <i class="fa fa-fw fa-map-marker"></i>
                    {{ form_label(form.longitude) }}
                    {{ form_widget(form.longitude) }}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <i class="fa fa-fw fa-align-left"></i>
                    {{ form_label(form.address) }}
                    {{ form_widget(form.address) }}
                </div>
            </div>
        </div>

    {#{{ form_end(form) }}#}

{% endblock %}