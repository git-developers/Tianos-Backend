{% spaceless %}
    <div class="modal modal-warning fade in" id="{{ modal.edit_id }}">
        <div class="modal-dialog {{ modal.edit.size|default() }}">

            <div class="modal-content">

                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title">
                        <i class="fa fa-fw fa-pencil"></i> {{ modal.edit.title|default('sylius.form.user.modal.edit.title'|trans ) }}
                        <small class="label label-warning" style="font-size: 65%;"></small>
                        <i class="fa fa-refresh fa-spin" style="color: white; margin-left: 10px; display:none"></i>
                    </h4>
                </div>

                <form name="{{ form_mapper.edit_name }}" method="post" class="">
                    <div class="crud-modal-content"></div>
                </form>

            </div>

        </div>
    </div>
{% endspaceless %}
