{% block content %}

    <section class="content-header">
        <h1>
            <i class="fa fa-fw fa-{{ one_to_many.icon }}"></i> {{ one_to_many.title }}
            <small>lista</small>
        </h1>
        <ol class="breadcrumb">
            {#<li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>#}
            {#<li class="active">Dashboard</li>#}

            {#{% for key, button in dataTable.tableHeaderButton %}#}
                {#<li>#}
                    {#{{ tianos_grid_render_button(button, '@Ui/OneToMany/Button/Header/_table_header_button.html.twig') }}#}
                {#</li>#}
            {#{% endfor %}#}
        </ol>
    </section>

    <section class="content">
        <form name="{{ box.form_name }}">
            <div class="row">

                {#LEFT#}
                <div id="{{ boxLeft.box_id }}" class="col-md-6">
                    <div class="box box-{{ boxLeft.box_class }}">
                        <div class="box-header ui-sortable-handle">

                            <i class="fa fa-fw fa-{{ boxLeft.box_icon|trim }}"></i>
                            <h3 class="box-title">
                                {{ boxLeft.box_title|trim }}
                            </h3>

                            <div class="box-tools pull-right">
                                <div class="row">
                                    <div class="col-md-offset-6 col-md-6">
                                        <div class="input-group">
                                            <input name="{{ boxLeft.box_search }}" type="search" class="form-control" maxlength="50">
                                            <span class="input-group-addon">
                                                <i class="fa fa-fw fa-search"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>

                                {#<ul class="pagination pagination-sm inline">#}
                                {#<li><a href="#">«</a></li>#}
                                {#<li><a href="#">1</a></li>#}
                                {#</ul>#}
                            </div>
                        </div>
                        <div class="box-body">

                            <div class="callout callout-info">
                                <p>
                                    <i class="fa fa-fw fa-info"></i> Seleccione un item.
                                </p>
                            </div>

                            <ul class="todo-list ui-sortable">
                                {{ include('CoreBundle:BoxOneToMany:Li/box_left.html.twig') }}
                            </ul>
                        </div>
                        {#<div class="box-footer clearfix no-border">#}
                        {#<button type="button" class="btn btn-default pull-right">#}
                        {#<i class="fa fa-plus"></i> Add item#}
                        {#</button>#}
                        {#</div>#}
                    </div>
                </div>
                {#LEFT#}

                {#RIGHT#}
                <div id="{{ boxRight.box_id }}" class="col-md-6">
                    <div class="box box-{{ boxRight.box_class }}">
                        <div class="box-header ui-sortable-handle">

                            <i class="fa fa-fw fa-{{ boxRight.box_icon|trim }}"></i>
                            <h3 class="box-title">
                                {{ boxRight.box_title|trim }}
                                &nbsp;
                                <i class="fa fa-1x fa-refresh fa-spin" style="display: none"></i>
                            </h3>

                            <div class="box-tools pull-right">
                                <div class="row">
                                    <div class="col-md-offset-6 col-md-6">
                                        <div class="input-group">
                                            <input name="{{ boxRight.box_search }}" type="search" class="form-control" maxlength="50">
                                            <span class="input-group-addon">
                                                <i class="fa fa-fw fa-search"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>

                                {#<ul class="pagination pagination-sm inline">#}
                                {#<li><a href="#">«</a></li>#}
                                {#<li><a href="#">1</a></li>#}
                                {#</ul>#}
                            </div>
                        </div>
                        <div class="box-body">
                            <ul class="todo-list ui-sortable">
                                {{ include('CoreBundle:BoxOneToMany:Li/box_right.html.twig', {isAssigned:false,}) }}
                            </ul>
                        </div>
                        {#<div class="box-footer clearfix no-border">#}
                        {#<button type="button" class="btn btn-default pull-right">#}
                        {#<i class="fa fa-plus"></i> Add item#}
                        {#</button>#}
                        {#</div>#}
                    </div>
                </div>
                {#RIGHT#}

            </div>
        </form>
    </section>

    {#{{ include('OneToManyBundle:Modal:create.html.twig') }}#}
    {#{{ include('OneToManyBundle:Modal:edit.html.twig') }}#}
