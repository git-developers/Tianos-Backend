{% extends 'GridBundle::Template/crud_modal_content.html.twig' %}

{% block crud_modal_content %}

    <div class="box box-solid">
        {#<div class="box-header with-border">#}
            {#<h3 class="box-title">About Me</h3>#}
        {#</div>#}

        <div class="box-body">

            <div class="row">
                <div class="col-md-2">
                    <strong>
                        <i class="fa fa-book margin-r-5"></i> Id
                    </strong>

                    <p class="text-muted">
                        <span class="badge bg-blue">{{ entity.id }}</span>
                    </p>
                </div>
                <div class="col-md-5">
                    <strong>
                        <i class="fa fa-book margin-r-5"></i> Descripci&oacute;n
                    </strong>

                    <p class="text-muted">
                        {{ entity.name }}
                    </p>
                </div>
                <div class="col-md-4">
                    <strong>
                        <i class="fa fa-calendar margin-r-5"></i> Fecha del ticket
                    </strong>

                    <p class="text-muted">
                        {{ entity.dateTicket|date('Y-m-d') }}
                    </p>
                </div>
            </div>

            <hr>

            <div class="row">
                <div class="col-md-12">
                    <strong>
                        <i class="fa fa-file-text-o margin-r-5"></i> Servicios
                    </strong>

                    <table class="table table-striped table-bordered no-padding">
                        <thead>
                            <tr class="bg-light-blue">
                                <th class="text-center" style="width: 10px">#</th>
                                <th class="text-center">Nombre</th>
                                <th class="text-center">Cantidad</th>
                                <th class="text-center">Precio unit.</th>
                                <th class="text-center">
                                    <i class="fa fa-money"></i> Sub total
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            {% set total = 0 %}
                            {% for ths in ticketHasServices %}
                                <tr>
                                    <td>
                                        <span class="badge bg-blue">{{ ths.id }}</span>
                                    </td>
                                    <td>{{ ths.services.name }}</td>
                                    <td class="text-center">{{ ths.quantity }}</td>
                                    <td class="text-right">{{ ths.unitPrice }}</td>
                                    <td class="text-right">{{ ths.subTotal }}</td>
                                </tr>

                                {% set total = total + ths.subTotal %}
                            {% else %}
                                <tr>
                                    <td colspan="5">No tiene servicios.</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                        <tfoot>
                            <tr class="bg-gray">
                                <td colspan="4" class="text-right">Total S/</td>
                                <td colspan="1" class="text-right">
                                    <span class="badge bg-gray-active">
                                        {{ total }}
                                    </span>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <strong>
                        <i class="fa fa-user margin-r-5"></i> Cliente
                    </strong>

                    <table class="table table-striped table-bordered no-padding">
                        <thead>
                        <tr class="bg-light-blue">
                            <th class="text-center" style="width: 10px">#</th>
                            <th class="text-center">Nombre</th>
                        </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <span class="badge bg-blue">{{ entity.client.id }}</span>
                                </td>
                                <td>
                                    {{ entity.client.name ~ ' ' ~ entity.client.lastName }}
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <strong>
                        <i class="fa fa-user margin-r-5"></i> Empleados
                    </strong>

                    <table class="table table-striped table-bordered no-padding">
                        <thead>
                            <tr class="bg-light-blue">
                                <th class="text-center" style="width: 10px">#</th>
                                <th class="text-center">Nombre</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for employee in entity.employee %}
                                <tr>
                                    <td>
                                        <span class="badge bg-blue">{{ employee.id }}</span>
                                    </td>
                                    <td>{{ employee.name ~ ' ' ~ employee.lastName }}</td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="2">No tiene empleados.</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
{% endblock %}
