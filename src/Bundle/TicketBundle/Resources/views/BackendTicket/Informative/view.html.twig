{% extends 'GridBundle::Template/crud_modal_content.html.twig' %}

{% block crud_modal_content %}
    <div class="box box-solid">
        {#<div class="box-header with-border">#}
            {#<h3 class="box-title">About Me</h3>#}
        {#</div>#}

        <div class="box-body">

            <div class="row">
                <div class="col-md-2">
                    <strong>
                        <i class="fa fa-book margin-r-5"></i> Id
                    </strong>

                    <p class="text-muted">
                        <span class="badge bg-blue">{{ entity.id }}</span>
                    </p>
                </div>
                <div class="col-md-5">
                    <strong>
                        <i class="fa fa-book margin-r-5"></i> Nombre del ticket
                    </strong>

                    <p class="text-muted">
                        {{ entity.name }}
                    </p>
                </div>
                <div class="col-md-4">
                    <strong>
                        <i class="fa fa-calendar margin-r-5"></i> Fecha del ticket
                    </strong>

                    <p class="text-muted">
                        {{ entity.dateTicket|date('Y-m-d') }}
                    </p>
                </div>
            </div>

            <hr>

            <div class="row">
                <div class="col-md-12">
                    <strong>
                        <i class="fa fa-user margin-r-5"></i> Cliente
                    </strong>

                    <table class="table table-striped table-bordered">
                        <thead>
                        <tr class="bg-light-blue">
                            <th style="width: 10px">#</th>
                            <th>Nombre</th>
                        </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    {{ entity.client.id }}
                                </td>
                                <td>
                                    {{ entity.client.name }}
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <strong>
                        <i class="fa fa-user margin-r-5"></i> Employee
                    </strong>

                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr class="bg-light-blue">
                                <th style="width: 10px">#</th>
                                <th>Nombre</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for employee in entity.employee %}
                                <tr>
                                    <td><span class="badge bg-blue">{{ employee.id }}</span></td>
                                    <td>{{ employee.name ~ ' ' ~ employee.lastName }}</td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="2">No tiene empleados.</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

            <hr>

        </div>
    </div>
{% endblock %}

