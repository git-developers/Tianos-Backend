{% spaceless %}
    <div class="modal modal-success fade in" id="{{ crud.modal_create_id }}">
        <div class="modal-dialog {{ crud.modal_create_size }}">

            <div class="modal-content">

                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title">
                        <i class="fa fa-fw fa-plus"></i> Crear item
                        <i class="fa fa-refresh fa-spin" style="color: white; margin-left: 10px; display:none"></i>
                    </h4>
                </div>

                <form name="{{ crud.form_create_name }}" method="post">
                    <div class="api-content"></div>
                </form>

            </div>

        </div>
    </div>
{% endspaceless %}
