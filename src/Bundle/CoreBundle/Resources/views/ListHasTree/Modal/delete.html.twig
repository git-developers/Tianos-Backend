{% spaceless %}
    <div class="modal modal-danger fade in" id="{{ crud.modal_delete_id }}">
        <div class="modal-dialog {{ crud.modal_delete_size }}">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">Ã—</span>
                    </button>
                    <h4 class="modal-title">
                        <i class="fa fa-fw fa-trash"></i> Eliminar item
                        <small class="label label-danger" style="font-size: 65%;"></small>
                        <i class="fa fa-refresh fa-spin" style="color: white; margin-left: 10px; display:none"></i>
                    </h4>
                </div>

                <form name="{{ crud.form_delete_name }}" method="post">
                    {#<input type="hidden" class="{{ crud.form_input_id }}" name="id">#}
                    <div class="modal-body">
                        <div id="message" class="callout callout-danger" style="display: none;">
                            <p></p>
                        </div>
                        <p>Esta seguro ?</p>
                        {#{{ crud.text.delete|trans|raw }}#}
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline pull-left" data-dismiss="modal">Cerrar</button>
                        <button type="submit" class="btn btn-outline">Eliminar</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
{% endspaceless %}