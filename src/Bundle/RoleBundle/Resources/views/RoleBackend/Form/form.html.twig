{% extends 'GridBundle::Template/crud_modal_content.html.twig' %}

{% block crud_modal_content %}

    {#{{ form_start(form) }}#}

    {% if id is defined %}
        <input type="hidden" value="{{ id }}" name="id">
    {% endif %}

    {{ form_widget(form._token) }}

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <i class="fa fa-fw fa-align-left"></i>
                {{ form_label(form.groupRol) }}
                {{ form_widget(form.groupRol) }}
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <i class="fa fa-fw fa-align-left"></i>
                {{ form_label(form.groupRolTag) }}
                {{ form_widget(form.groupRolTag) }}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <i class="fa fa-fw fa-caret-square-o-right"></i>
                {{ form_label(form.name) }}
                {{ form_widget(form.name) }}
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <i class="fa fa-fw fa-object-group"></i>
                {{ form_label(form.slug) }}
                {{ form_widget(form.slug) }}
            </div>
        </div>
    </div>

    {#{{ form_widget(form) }}#}
    {#{{ form_end(form) }}#}

{% endblock %}